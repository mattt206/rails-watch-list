<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key, crop: :scale %>); background-size: fill; background-repeat: no-repeat; background-position: center; background color">
  <div class="container">
    <h1 class="text-center"><%= @list.name.upcase %></h1>
    <div class="d-flex justify-content-start">
      <%= link_to "Add new bookmark", new_list_bookmark_path(@list), class: "button-6 text-right m-2"  %>
      <%= link_to "Delete List", list_path(@list), class: "button-6 text-right m-2", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
    </div>
  </div>
</div>
<div class="m-5"></div>

<div class="container">
  <div class="row ">

        <% @list.bookmarks.each do |bookmark| %>
          <div class="col-6 d-flex justify-content-around">
            <div class="card bg-new"  style="height: 50rem;">
              <img class="card-img-top" width="250" height="350" src="<%= bookmark.movie.poster_url %>" />
                <div class="card-body">
                  <h5 class="card-title"> <strong>  <%= bookmark.movie.title %></strong></h5>
                  <p><% bookmark.movie.rating.to_i.times do%><i class="fa-regular fa-star star-color"></i><% end %></p>
                  <p class="card-text"><%= bookmark.movie.overview %></p>
                </div>
                <div class="d-flex align-items-end flex-column">
                  <%= link_to "Delete bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'button-6' %>
                </div>
            </div>
          </div>
      <% end %>

  </div>
</div>
